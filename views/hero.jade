html
  head
    base(href='/')
    title frlender
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="app/styles.css")
    // global control
    if dev
      script.
        var mainFile = 'app/main.js';
        var ENV_IS_DEV = true;
    else
      script.
        var mainFile = 'main-min.js';
        var ENV_IS_DEV = false;
      
    // 1. Load libraries
    // IE required polyfills, in this exact order
    script(src='node_modules/es6-shim/es6-shim.min.js')
    script(src='node_modules/systemjs/dist/system-polyfills.js')
    script(src='node_modules/angular2/bundles/angular2-polyfills.js')
    script(src='node_modules/systemjs/dist/system.src.js')
    script(src='node_modules/rxjs/bundles/Rx.js')
    if dev
      script(src='node_modules/angular2/bundles/angular2.dev.js')
    else
      script(src='node_modules/angular2/bundles/angular2.js')
    script(src='node_modules/angular2/bundles/router.js')

    // 2. Configure SystemJS
    if dev
      script var mainFile = 'app/main.js';
    else
      script var mainFile = 'main-min.js';
    script.
      System.config({
        packages: {        
          app: {
            format: 'register',
            defaultExtension: 'js'
          }
        }
      });
      System.import(mainFile)
      .then(null, console.error.bind(console));
  // 3. Display the application
